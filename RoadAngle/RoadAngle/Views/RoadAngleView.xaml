<Window
    x:Class="RoadAngle.Views.RoadAngleView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:RoadAngle.ViewModels"
    Title="RoadAngle"
    Width="500"
    Height="250"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Window.DataContext>
        <Binding Path="viewModel" RelativeSource="{RelativeSource Self}" />
    </Window.DataContext>
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <UniformGrid Grid.Row="0" Rows="1">
                <Button
                    Grid.Row="0"
                    Grid.Column="0"
                    d:Content="123456"
                    Command="{Binding SelectFilledRegionCommand}"
                    Content="{Binding ContextSelectionFilledRegion}"
                    ContentStringFormat="select filled region: {0}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    d:Content="123456"
                    Command="{Binding SelectTopoCommand}"
                    Content="{Binding ContextSelectionTopo}"
                    ContentStringFormat="select topo: {0}" />
                <Button
                    Grid.Row="0"
                    Grid.Column="2"
                    d:Content="123456"
                    Command="{Binding SelectFloorCommand}"
                    Content="{Binding ContextSelectionFloor}"
                    ContentStringFormat="select floor: {0}" />
            </UniformGrid>
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Topo auschnitt abstand" />
                <TextBox d:Text="5" Text="{Binding OuterLoopGrowNumber, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
        </Grid>

        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="120"
                Command="{Binding CloseCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Cancel" />
            <Button
                Width="120"
                Command="{Binding CreateVoidCommand}"
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                Content="Create Void" />
            <Button
                Width="120"
                Command="{Binding AddPointOnFloorCommand}"
                Content="new Points on FLoor" />
        </StackPanel>
    </Grid>
</Window>